{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "workers/**/*.ts", 
    "lib/**/*.ts", 
    "types/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
} 